{{> nav}}

<div style="height: 500px;" class="d-flex justify-content-center mt-4">

  <div class="card mb-3 w-25 ms-3 me-3 h-75">
    <h2 class="card-header bg-primary text-light">Login</h2>

    <form class="login-form ms-2">
      <label class="mt-4" for="email-login">email:</label>
      <input type="text" id="email-login" />
      <div>
        <label class="mt-4" for="password-login">password:</label>
        <input type="password" id="password-login" />
      </div>
      <button class="mt-5 btn btn-success" type="submit">login</button>
    </form>
  </div>
  <h2 class="mt-5">OR</h2>
  <div class="card mb-3 w-25 ms-3 me-3 h-75">
    <h2 class="card-header bg-primary text-light">Signup</h2>

    <form class="signup-form ms-2">
      <label class="mt-3" for="name-signup">name:</label>
      <input type="text" id="name-signup" />
      <div>
        <label class="mt-3" for="email-signup">email:</label>
        <input type="text" id="email-signup" />
      </div>
      <label class="mt-3" for="password-signup">password:</label>
      <input type="password" id="password-signup" />

      <button class="mt-4 btn btn-success" type="submit">signup</button>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
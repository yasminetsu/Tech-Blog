{{> nav}}

<div class="post">
  <div class="d-flex justify-content-center">
    <article class="card w-75 mt-3">
      <div class="card-header d-flex flex-row justify-content-between bg-warning">
        <h2 class="text-light">{{blogComment.[0].title}}</h2>
        <div class="text-end text-light">
          Posted by {{blogComment.[0].user.name}} on {{format_date blogComment.[0].date}}
        </div>
      </div>
      <div class="card-body fs-4">
        {{blogComment.[0].content}}
      </div>
    </article>
  </div>

<div class="d-flex justify-content-start ms-3 mt-4">
  {{#if blogComment.[0].Comments}}
  <section class="card w-75">
    <div class="card-header bg-danger text-light">
      <h3>Comments</h3>
    </div>

    <div>
      {{#each blogComment.[0].Comments}}
      <div class="card mt-3">
        <p class="card-body fs-4">
          {{this.body}}
        </p>
        <p class="card-body fs-5">
          &mdash; {{this.user.name}} ({{format_date createdAt}})
        </p>
      </div>
      {{/each}}
    </div>
  </section>
  {{/if}}
</div>

  <form id="new-comment-form" class="card mt-3 me-3 ms-3 mb-3 w-25">
    <div class="card-header text-light bg-success">
      <h3 class="fs-6">Add New Comment</h3>
    </div>

    <div class="card-body d-flex flex-column">
      <input type="hidden" name="post-id" value="{{blogComment.[0].id}}" />

      <label class="form-label fs-6" for="comment-body">Comment:</label>

      <textarea name="comment-body" class="form-input rounded border border-secondary-subtle"></textarea>

      <button type="submit" class="btn btn-warning text-light mt-2">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>